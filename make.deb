
VER  ?=
DIST ?= unstable
FILES = README.md bundle.json ethernet.py requirements.txt
DIRS  = data ip hooks tools


release:
	@$(CURDIR)/release.sh $(DIST) $(VER)

deb:
	mkdir -p deb
	cp -a debian deb/
	cp -a debian.mk deb/Makefile
	cp -a README.md $(FILES) $(DIRS) deb/
	(cd deb; \
		dpkg-buildpackage -us -uc -rfakeroot; )

clean:
	rm -rf deb

